<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/tableRow1">

        <ImageButton
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:id="@+id/imageButtonBaseball"
            android:src="@drawable/baseball"
            android:onClick="buttonClicked" />

        <ImageButton
            android:layout_weight="0.5"
            android:layout_height="150dp"
            android:id="@+id/imageButtonBasketball"
            android:src="@drawable/basketball"
            android:onClick="buttonClicked" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/tableRow2">

        <ImageButton
            android:layout_weight="0.5"
            android:layout_height="150dp"
            android:id="@+id/imageButtonFootball"
            android:src="@drawable/football"
            android:onClick="buttonClicked" />

        <ImageButton
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:id="@+id/imageButtonHockey"
            android:src="@drawable/hockey"
            android:onClick="buttonClicked" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/tableRow3">

        <ImageButton
            android:layout_weight="0.5"
            android:layout_height="125dp"
            android:id="@+id/imageButtonSoccer"
            android:src="@drawable/soccer"
            android:onClick="buttonClicked" />

        <ImageButton
            android:layout_weight="0.5"
            android:layout_height="125dp"
            android:id="@+id/imageButtonTennis"
            android:src="@drawable/tennis"
            android:onClick="buttonClicked" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/tableRow4">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Stop Sounds"
            android:onClick="buttonClicked"
            android:id="@+id/button" />
    </TableRow>
</LinearLayout>
